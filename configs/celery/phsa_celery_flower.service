[Unit]
Description=PHSA Automation Celery Flower Service
After=network.target

[Service]
Type=forking
User=root
Group=root
ExecStart=/bin/sh -c '/home/steodore/.envs/carmina/bin/celery flower \
    -A p_soc_auto --inspect --persistent --log-file-prefix=/var/log/ \
    --logging=info &'
ExecStop=/bin/kill -s TERM $MAINPID

[Install]
WantedBy=multi-user.target